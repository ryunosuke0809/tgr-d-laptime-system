<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/images/trd/favicon.ico" type="image/x-icon" />
  <title>ユーザー管理 - TRD Timing Monitor</title>
  <link rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons'>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:600,400,300'>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Saira:wght@100;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Open Sans', sans-serif;
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    .header {
      position: fixed;
      left: 0;
      right: 0;
      top: 0;
      z-index: 1002;
      min-height: 60px;
      padding: 0 15px;
      background: #ff0000;
      border-bottom: 9px solid #000000;
    }

    a.logo {
      font-size: 20px;
      color: #f2f2f2;
      float: left;
      margin-top: 15px;
      text-transform: uppercase;
      font-family: 'Saira', sans-serif;
      text-decoration: none;
    }

    a.logo b {
      font-weight: 900;
    }

    .user_link {
      margin: 0px 0px 0px 20px;
      padding-left: 1.5em;
      font-size: 1.2em;
      font-weight: bold;
      display: inline;
      vertical-align: middle;
      color: #FFF;
      font-family: 'Saira', sans-serif;
      float: right;
      line-height: 60px;
    }

    .main-content {
      margin-top: 90px;
      padding: 20px;
      max-width: 1600px;
      margin-left: auto;
      margin-right: auto;
    }

    h1 {
      color: #5c9cd8;
      font-size: 28px;
      margin-bottom: 20px;
      font-weight: 700;
    }

    .actions {
      margin-bottom: 20px;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      text-decoration: none;
      display: inline-block;
      transition: background 0.3s;
    }

    .btn-primary {
      background: #ff0000;
      color: white;
    }

    .btn-primary:hover {
      background: #cc0000;
    }

    .btn-secondary {
      background: #666;
      color: white;
    }

    .btn-secondary:hover {
      background: #555;
    }

    .btn-edit {
      background: #4CAF50;
      color: white;
      padding: 6px 12px;
      font-size: 12px;
    }

    .btn-edit:hover {
      background: #45a049;
    }

    .btn-delete {
      background: #f44336;
      color: white;
      padding: 6px 12px;
      font-size: 12px;
    }

    .btn-delete:hover {
      background: #da190b;
    }

    /* フィルター・ソートエリア */
    .filter-sort-area {
      background: rgba(0, 0, 0, 0.8);
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      border: 1px solid rgba(92, 156, 216, 0.3);
      box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .filter-row {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .filter-group label {
      color: #5c9cd8;
      font-size: 13px;
      font-weight: 600;
    }

    .filter-group input,
    .filter-group select {
      padding: 8px 12px;
      border: 1px solid rgba(92, 156, 216, 0.3);
      border-radius: 4px;
      background: rgba(255, 255, 255, 0.05);
      color: #fff;
      font-size: 14px;
      min-width: 150px;
    }

    .filter-group input:focus,
    .filter-group select:focus {
      outline: none;
      border-color: #5c9cd8;
      box-shadow: 0 0 5px rgba(92, 156, 216, 0.4);
    }

    .filter-group select option {
      background: #1a1a2e;
      color: #fff;
    }

    .filter-actions {
      display: flex;
      gap: 10px;
      align-items: flex-end;
    }

    .btn-filter {
      padding: 8px 16px;
      background: #5c9cd8;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 600;
      transition: background 0.3s;
    }

    .btn-filter:hover {
      background: #4a8ac0;
    }

    .btn-reset {
      padding: 8px 16px;
      background: #666;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 600;
      transition: background 0.3s;
    }

    .btn-reset:hover {
      background: #555;
    }

    table {
      width: 100%;
      background: rgba(0, 0, 0, 0.8);
      border-collapse: collapse;
      box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3), 0 8px 20px rgba(0, 0, 0, 0.5);
      border-radius: 8px;
      overflow: hidden;
      border: 1px solid rgba(92, 156, 216, 0.3);
    }

    thead {
      background: rgba(92, 156, 216, 0.2);
      color: #5c9cd8;
      border-bottom: 2px solid #5c9cd8;
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    th {
      font-weight: 600;
      cursor: pointer;
      user-select: none;
      position: relative;
    }

    th:hover {
      background: rgba(92, 156, 216, 0.3);
    }

    th.sortable::after {
      content: ' ⇅';
      opacity: 0.3;
      font-size: 12px;
    }

    th.sort-asc::after {
      content: ' ▲';
      opacity: 1;
      font-size: 12px;
    }

    th.sort-desc::after {
      content: ' ▼';
      opacity: 1;
      font-size: 12px;
    }

    tbody tr {
      background: rgba(26, 26, 46, 0.6);
      transition: all 0.3s ease;
    }
    
    tbody tr:hover {
      background: rgba(92, 156, 216, 0.15);
    }

    .password-cell {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .password-display {
      font-family: monospace;
      letter-spacing: 2px;
      color: #f44336;
    }

    .password-toggle {
      background: none;
      border: none;
      color: #ffff;
      cursor: pointer;
      padding: 4px 8px;
      border-radius: 4px;
      transition: all 0.3s;
    }

    .password-toggle:hover {
      background: rgba(92, 156, 216, 0.2);
      color: #fff;
    }

    .password-toggle i {
      font-size: 16px;
    }

    .role-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
    }

    .role-admin {
      background: #ff0000;
      color: white;
    }

    .role-user {
      background: #4CAF50;
      color: white;
    }

    .role-viewer {
      background: #2196F3;
      color: white;
    }

    .company-badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 10px;
      font-size: 11px;
      font-weight: 600;
      background: rgba(92, 156, 216, 0.3);
      color: #5c9cd8;
      border: 1px solid #5c9cd8;
    }

    .expiry-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
      margin-left: 5px;
    }

    .expiry-valid {
      background: #4CAF50;
      color: white;
    }

    .expiry-expired {
      background: #f44336;
      color: white;
    }

    .expiry-unlimited {
      background: #2196F3;
      color: white;
    }

    /* モーダル */
    .modal {
      display: none;
      position: fixed;
      z-index: 2000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background: rgba(0, 0, 0, 0.95);
      margin: 5% auto;
      padding: 30px;
      border: 2px solid #fff;
      border-radius: 12px;
      width: 500px;
      max-width: 90%;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(10px);
    }
    
    .modal-content h2 {
      color: #5c9cd8;
      font-weight: 700;
      margin-bottom: 25px;
    }

    .close {
      color: #999;
      float: right;
      font-size: 28px;
      font-weight: bold;
      line-height: 20px;
      cursor: pointer;
      transition: color 0.3s;
    }

    .close:hover,
    .close:focus {
      color: #ff0000;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: 600;
      color: #5c9cd8;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 10px;
      border: 1px solid rgba(92, 156, 216, 0.3);
      border-radius: 6px;
      font-size: 14px;
      background: rgba(255, 255, 255, 0.05);
      color: #fff;
      transition: all 0.3s;
    }
    
    .form-group input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }
    
    .form-group select option {
      background: #1a1a2e;
      color: #fff;
    }
    
    .form-group small {
      color: #999 !important;
      display: block;
      margin-top: 5px;
    }

    .form-group input:focus,
    .form-group select:focus {
      outline: none;
      border-color: #5c9cd8;
      box-shadow: 0 0 8px rgba(92, 156, 216, 0.4);
      background: rgba(255, 255, 255, 0.08);
    }

    .modal-actions {
      text-align: right;
      margin-top: 20px;
    }

    .modal-actions .btn {
      margin-left: 10px;
    }

    .message {
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 4px;
      display: none;
    }

    .message.success {
      background: rgba(76, 175, 80, 0.2);
      color: #4caf50;
      border: 1px solid #4caf50;
    }

    .message.error {
      background: rgba(244, 67, 54, 0.2);
      color: #f44336;
      border: 1px solid #f44336;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 20px;
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
    }

    .back-link:hover {
      color: #7db4e6;
      transform: translateX(-3px);
    }
  </style>
</head>
<body>

  <header class="header">
    <a class="logo"><b>TGR-D LAPTIME SYSTEM</b></a>
    <div class="top-menu">
      <span class="user_link">@ <%= id %></span>
    </div>
  </header>

  <div class="main-content">
    <a href="/user/menu" class="back-link">← メニューに戻る</a>
    
    <div id="message" class="message"></div>

    <div class="actions">
      <button class="btn btn-primary" onclick="openCreateModal()">
        <i class="material-icons" style="vertical-align: middle; font-size: 18px;">add</i>
        新規ユーザー作成
      </button>
      <button class="btn btn-secondary" onclick="openCSVUploadModal()">
        <i class="fa fa-upload" style="margin-right: 5px;"></i>
        CSVアップロード
      </button>
      <a href="/sample/users_template.csv" download class="btn btn-secondary">
        <i class="fa fa-download" style="margin-right: 5px;"></i>
        CSVテンプレート
      </a>
    </div>

    <!-- フィルター・ソートエリア -->
    <div class="filter-sort-area">
      <div class="filter-row">
        <div class="filter-group">
          <label>ユーザーID/名前</label>
          <input type="text" id="filterSearch" placeholder="検索...">
        </div>
        <div class="filter-group">
          <label>権限</label>
          <select id="filterRole">
            <option value="">全て</option>
            <option value="admin">管理者</option>
            <option value="user">一般ユーザー</option>
            <option value="viewer">閲覧者</option>
          </select>
        </div>
        <div class="filter-group">
          <label>会社区分</label>
          <select id="filterCompany">
            <option value="">全て</option>
            <option value="TOYOTA">TOYOTA</option>
            <option value="TGR-DC">TGR-DC</option>
            <option value="講師">講師</option>
            <option value="TGR-D">TGR-D</option>
            <option value="aZillion">aZillion</option>
          </select>
        </div>
        <div class="filter-group">
          <label>有効期限</label>
          <select id="filterExpiry">
            <option value="">全て</option>
            <option value="valid">有効</option>
            <option value="expired">期限切れ</option>
            <option value="unlimited">無期限</option>
          </select>
        </div>
        <div class="filter-actions">
          <button class="btn-filter" onclick="applyFilter()">
            <i class="fa fa-filter" style="margin-right: 5px;"></i>
            フィルター
          </button>
          <button class="btn-reset" onclick="resetFilter()">
            <i class="fa fa-redo" style="margin-right: 5px;"></i>
            リセット
          </button>
        </div>
      </div>
    </div>

    <table id="userTable">
      <thead>
        <tr>
          <th class="sortable" data-column="id">ユーザーID</th>
          <th>パスワード</th>
          <th class="sortable" data-column="name">名前</th>
          <th class="sortable" data-column="company">会社区分</th>
          <th class="sortable" data-column="role">権限</th>
          <th class="sortable" data-column="expiryDate">有効期限</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="userTableBody">
        <!-- ユーザーリストがここに表示されます -->
      </tbody>
    </table>
  </div>

  <!-- 作成/編集モーダル -->
  <div id="userModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2 id="modalTitle">新規ユーザー作成</h2>
      <form id="userForm">
        <div class="form-group">
          <label for="userId">ユーザーID *</label>
          <input type="text" id="userId" name="id" required>
        </div>
        <div class="form-group">
          <label for="userName">名前 *</label>
          <input type="text" id="userName" name="name" required>
        </div>
        <div class="form-group">
          <label for="userCompany">会社区分 *</label>
          <select id="userCompany" name="company" required>
            <option value="">選択してください</option>
            <option value="TOYOTA">TOYOTA</option>
            <option value="TGR-DC">TGR-DC</option>
            <option value="講師">講師</option>
            <option value="TGR-D">TGR-D</option>
            <option value="aZillion">aZillion</option>
          </select>
        </div>
        <div class="form-group">
          <label for="userPassword">パスワード <span id="passwordHint">*</span></label>
          <input type="password" id="userPassword" name="password">
        </div>
        <div class="form-group">
          <label for="userRole">権限 *</label>
          <select id="userRole" name="role" required>
            <option value="admin">管理者 (admin) - 全機能</option>
            <option value="user" selected>一般ユーザー (user) - ユーザー管理以外</option>
            <option value="viewer">閲覧者 (viewer) - モニターのみ</option>
          </select>
          <small>admin: 全機能 / user: ユーザー管理以外 / viewer: モニターのみ</small>
        </div>
        <div class="form-group">
          <label>ログイン可能期間</label>
          <div style="display: flex; gap: 10px; align-items: center;">
            <div style="flex: 1;">
              <input type="date" id="userExpiryStartDate" name="expiryStartDate" placeholder="開始日">
            </div>
            <span style="color: #5c9cd8;">～</span>
            <div style="flex: 1;">
              <input type="date" id="userExpiryEndDate" name="expiryEndDate" placeholder="終了日">
            </div>
          </div>
          <small>両方空白で無期限。期間を設定する場合は開始日と終了日の両方を入力してください（例: 2025-09-01 ～ 2025-09-05）</small>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" onclick="closeModal()">キャンセル</button>
          <button type="submit" class="btn btn-primary">保存</button>
        </div>
      </form>
    </div>
  </div>

  <!-- CSVアップロードモーダル -->
  <div id="csvUploadModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeCSVUploadModal()">&times;</span>
      <h2>CSVファイルアップロード</h2>
      
      <div style="margin: 20px 0; padding: 15px; background: rgba(92, 156, 216, 0.1); border-radius: 4px; border: 1px solid rgba(92, 156, 216, 0.3);">
        <h3 style="margin-top: 0; color: #5c9cd8;">Excel/CSV形式</h3>
        <p style="margin: 5px 0; color: #ccc;">ExcelファイルまたはCSVファイルをアップロードできます：</p>
        <code style="display: block; padding: 10px; background: rgba(0, 0, 0, 0.5); border: 1px solid rgba(92, 156, 216, 0.3); border-radius: 4px; margin: 10px 0; color: #5c9cd8;">
          会社, ユーザー名, ユーザーID, PW, 閲覧期間
        </code>
        <p style="margin: 5px 0; color: #ccc; font-size: 13px;">
          <strong>Excel形式:</strong><br>
          ※ ヘッダー行: 会社, ユーザー名, (ユーザーID列), PW, 閲覧期間<br>
          ※ 閲覧期間: 「9/1-9/5」形式 または 「無期限」<br>
          ※ 会社: TOYOTA, TGR-DC, DAIHATSU, SUBARU など<br>
          <br>
          <strong>CSV形式:</strong><br>
          ※ 列名: id, name, password, company, role, expiryStartDate, expiryEndDate<br>
          ※ expiryStartDate/expiryEndDate: YYYY-MM-DD形式（両方空白で無期限）<br>
          ※ role は user または admin（省略時は user）
        </p>
      </div>

      <form id="csvUploadForm" enctype="multipart/form-data">
        <div class="form-group">
          <label for="csvfile">Excel/CSVファイル</label>
          <input type="file" id="csvfile" name="csvfile" accept=".csv,.xlsx,.xls" required>
        </div>
        
        <div id="uploadProgress" style="display: none; margin: 15px 0;">
          <div style="background: #e0e0e0; border-radius: 4px; overflow: hidden;">
            <div id="progressBar" style="width: 0%; height: 30px; background: #ff0000; transition: width 0.3s; display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 600;">
              0%
            </div>
          </div>
        </div>

        <div id="uploadResult" style="display: none; margin: 15px 0; padding: 15px; border-radius: 4px;"></div>

        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" onclick="closeCSVUploadModal()">キャンセル</button>
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-upload" style="margin-right: 5px;"></i>
            アップロード
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    let isEditMode = false;
    let editingUserId = null;
    let usersData = []; // 全ユーザーデータ
    let filteredUsers = []; // フィルター後のデータ
    let sortColumn = '';
    let sortOrder = 'asc';

    // ページロード時にユーザー一覧を取得
    $(document).ready(function() {
      loadUsers();
      setupSortHandlers();
    });

    // ソートハンドラーの設定
    function setupSortHandlers() {
      $('.sortable').on('click', function() {
        const column = $(this).data('column');
        if (sortColumn === column) {
          sortOrder = sortOrder === 'asc' ? 'desc' : 'asc';
        } else {
          sortColumn = column;
          sortOrder = 'asc';
        }
        updateSortIndicators();
        sortAndDisplayUsers();
      });
    }

    // ソートインジケーターの更新
    function updateSortIndicators() {
      $('.sortable').removeClass('sort-asc sort-desc');
      $(`.sortable[data-column="${sortColumn}"]`).addClass(`sort-${sortOrder}`);
    }

    // ユーザー一覧を読み込む
    function loadUsers() {
      $.ajax({
        url: '/user/api/users',
        method: 'GET',
        success: function(response) {
          if (response.success) {
            usersData = response.users;
            filteredUsers = [...usersData];
            sortAndDisplayUsers();
          } else {
            showMessage('ユーザーの読み込みに失敗しました', 'error');
          }
        },
        error: function() {
          showMessage('サーバーエラーが発生しました', 'error');
        }
      });
    }

    // フィルター適用
    function applyFilter() {
      const searchText = $('#filterSearch').val().toLowerCase();
      const roleFilter = $('#filterRole').val();
      const companyFilter = $('#filterCompany').val();
      const expiryFilter = $('#filterExpiry').val();

      filteredUsers = usersData.filter(user => {
        // 検索フィルター
        if (searchText && 
            !user.id.toLowerCase().includes(searchText) && 
            !user.name.toLowerCase().includes(searchText)) {
          return false;
        }

        // 権限フィルター
        if (roleFilter && user.role !== roleFilter) {
          return false;
        }

        // 会社区分フィルター
        if (companyFilter && user.company !== companyFilter) {
          return false;
        }

        // 有効期限フィルター
        if (expiryFilter && user.expiryStatus !== expiryFilter) {
          return false;
        }

        return true;
      });

      sortAndDisplayUsers();
    }

    // フィルターリセット
    function resetFilter() {
      $('#filterSearch').val('');
      $('#filterRole').val('');
      $('#filterCompany').val('');
      $('#filterExpiry').val('');
      filteredUsers = [...usersData];
      sortAndDisplayUsers();
    }

    // ソートと表示
    function sortAndDisplayUsers() {
      if (sortColumn) {
        filteredUsers.sort((a, b) => {
          let aVal = a[sortColumn] || '';
          let bVal = b[sortColumn] || '';

          // 日付の場合（期間対応：終了日でソート）
          if (sortColumn === 'expiryDate') {
            const aDate = a.expiryEndDate || a.expiryStartDate;
            const bDate = b.expiryEndDate || b.expiryStartDate;
            if (!aDate) return sortOrder === 'asc' ? 1 : -1;
            if (!bDate) return sortOrder === 'asc' ? -1 : 1;
            aVal = new Date(aDate);
            bVal = new Date(bDate);
          }

          if (aVal < bVal) return sortOrder === 'asc' ? -1 : 1;
          if (aVal > bVal) return sortOrder === 'asc' ? 1 : -1;
          return 0;
        });
      }

      displayUsers(filteredUsers);
    }

    // ユーザー一覧を表示
    function displayUsers(users) {
      const tbody = $('#userTableBody');
      tbody.empty();

      if (users.length === 0) {
        tbody.append('<tr><td colspan="7" style="text-align: center; color: #999;">該当するユーザーが見つかりません</td></tr>');
        return;
      }

      users.forEach(function(user) {
        // 権限の表示
        const roleClass = 'role-' + user.role;
        const roleLabel = user.role === 'admin' ? '管理者' : 
                         user.role === 'user' ? '一般ユーザー' : '閲覧者';
        
        // 会社区分の表示
        const companyDisplay = user.company || '未設定';
        
        // ログイン可能期間の表示
        let expiryDisplay = '';
        let expiryBadge = '';
        
        if (user.expiryStatus === 'unlimited') {
          expiryDisplay = '無期限';
          expiryBadge = '<span class="expiry-badge expiry-unlimited">無期限</span>';
        } else if (user.expiryStatus === 'expired') {
          // 期間表示
          if (user.expiryStartDate && user.expiryEndDate) {
            expiryDisplay = `${user.expiryStartDate} ～ ${user.expiryEndDate}`;
          } else if (user.expiryEndDate) {
            expiryDisplay = `～ ${user.expiryEndDate}`;
          } else if (user.expiryStartDate) {
            expiryDisplay = `${user.expiryStartDate} ～`;
          }
          expiryBadge = '<span class="expiry-badge expiry-expired">期限切れ</span>';
        } else {
          // 期間表示
          if (user.expiryStartDate && user.expiryEndDate) {
            expiryDisplay = `${user.expiryStartDate} ～ ${user.expiryEndDate}`;
          } else if (user.expiryEndDate) {
            expiryDisplay = `～ ${user.expiryEndDate}`;
          } else if (user.expiryStartDate) {
            expiryDisplay = `${user.expiryStartDate} ～`;
          }
          expiryBadge = '<span class="expiry-badge expiry-valid">有効</span>';
        }
        
        // パスワードをマスク表示（デフォルト）
        const passwordMask = '********';
        
        const row = `
          <tr>
            <td>${escapeHtml(user.id)}</td>
            <td>
              <div class="password-cell">
                <span class="password-display" id="pwd-${escapeHtml(user.id)}" data-visible="false">${passwordMask}</span>
                <button class="password-toggle" onclick="togglePassword('${escapeHtml(user.id)}')">
                  <i class="fa-regular fa-eye" id="eye-${escapeHtml(user.id)}"></i>
                </button>
              </div>
            </td>
            <td>${escapeHtml(user.name)}</td>
            <td><span class="company-badge">${escapeHtml(companyDisplay)}</span></td>
            <td><span class="role-badge ${roleClass}">${roleLabel}</span></td>
            <td>${escapeHtml(expiryDisplay)} ${expiryBadge}</td>
            <td style="white-space: nowrap;">
              <button class="btn btn-edit" onclick="openEditModal('${user.id}')">編集</button>
              <button class="btn btn-delete" onclick="deleteUser('${user.id}')">削除</button>
            </td>
          </tr>
        `;
        tbody.append(row);
      });
    }

    // パスワード表示/非表示の切り替え
    function togglePassword(userId) {
      const pwdElement = $('#pwd-' + userId);
      const eyeIcon = $('#eye-' + userId);
      const isVisible = pwdElement.attr('data-visible') === 'true';
      
      if (isVisible) {
        // 非表示にする
        pwdElement.text('********');
        pwdElement.attr('data-visible', 'false');
        eyeIcon.removeClass('fa-eye-slash').addClass('fa-eye');
      } else {
        // 表示する（サーバーから取得）
        $.ajax({
          url: '/user/api/users/' + userId + '/password',
          method: 'GET',
          success: function(response) {
            if (response.success && response.password) {
              pwdElement.text(response.password);
              pwdElement.attr('data-visible', 'true');
              eyeIcon.removeClass('fa-eye').addClass('fa-eye-slash');
            } else {
              showMessage('パスワードの取得に失敗しました', 'error');
            }
          },
          error: function() {
            showMessage('パスワードの取得に失敗しました', 'error');
          }
        });
      }
    }

    // 新規作成モーダルを開く
    function openCreateModal() {
      isEditMode = false;
      editingUserId = null;
      $('#modalTitle').text('新規ユーザー作成');
      $('#userId').prop('disabled', false);
      $('#userPassword').prop('required', true);
      $('#passwordHint').text('*');
      $('#userForm')[0].reset();
      $('#userModal').show();
    }

    // 編集モーダルを開く
    function openEditModal(userId) {
      isEditMode = true;
      editingUserId = userId;
      $('#modalTitle').text('ユーザー編集');
      $('#userId').prop('disabled', true);
      $('#userPassword').prop('required', false);
      $('#passwordHint').text('(変更する場合のみ入力)');

      // ユーザー情報を取得して表示
      const user = usersData.find(u => u.id === userId);
      if (user) {
        $('#userId').val(user.id);
        $('#userName').val(user.name);
        $('#userCompany').val(user.company || '');
        $('#userRole').val(user.role);
        $('#userExpiryStartDate').val(user.expiryStartDate || '');
        $('#userExpiryEndDate').val(user.expiryEndDate || '');
        $('#userPassword').val('');
        $('#userModal').show();
      }
    }

    // モーダルを閉じる
    function closeModal() {
      $('#userModal').hide();
      $('#userForm')[0].reset();
    }

    // フォーム送信
    $('#userForm').submit(function(e) {
      e.preventDefault();

      const expiryStartDateValue = $('#userExpiryStartDate').val();
      const expiryEndDateValue = $('#userExpiryEndDate').val();
      const formData = {
        id: $('#userId').val(),
        name: $('#userName').val(),
        company: $('#userCompany').val(),
        password: $('#userPassword').val(),
        role: $('#userRole').val(),
        expiryStartDate: expiryStartDateValue || null,
        expiryEndDate: expiryEndDateValue || null
      };

      if (isEditMode) {
        // 更新
        $.ajax({
          url: '/user/api/users/' + editingUserId,
          method: 'PUT',
          contentType: 'application/json',
          data: JSON.stringify(formData),
          success: function(response) {
            if (response.success) {
              showMessage('ユーザーを更新しました', 'success');
              closeModal();
              loadUsers();
            } else {
              showMessage(response.message || 'ユーザーの更新に失敗しました', 'error');
            }
          },
          error: function(xhr) {
            const response = xhr.responseJSON;
            showMessage(response?.message || 'サーバーエラーが発生しました', 'error');
          }
        });
      } else {
        // 新規作成
        $.ajax({
          url: '/user/api/users',
          method: 'POST',
          contentType: 'application/json',
          data: JSON.stringify(formData),
          success: function(response) {
            if (response.success) {
              showMessage('ユーザーを作成しました', 'success');
              closeModal();
              loadUsers();
            } else {
              showMessage(response.message || 'ユーザーの作成に失敗しました', 'error');
            }
          },
          error: function(xhr) {
            const response = xhr.responseJSON;
            let errorMessage = 'サーバーエラーが発生しました';
            
            if (response?.message) {
              if (response.message.includes('already exists')) {
                errorMessage = 'このユーザーIDは既に使用されています';
              } else if (response.message.includes('Required fields')) {
                errorMessage = '必須項目が入力されていません';
              } else {
                errorMessage = response.message;
              }
            }
            
            showMessage(errorMessage, 'error');
          }
        });
      }
    });

    // ユーザー削除
    function deleteUser(userId) {
      if (!confirm('ユーザー "' + userId + '" を削除してもよろしいですか？')) {
        return;
      }

      $.ajax({
        url: '/user/api/users/' + userId,
        method: 'DELETE',
        success: function(response) {
          if (response.success) {
            showMessage('ユーザーを削除しました', 'success');
            loadUsers();
          } else {
            showMessage(response.message || 'ユーザーの削除に失敗しました', 'error');
          }
        },
        error: function(xhr) {
          const response = xhr.responseJSON;
          showMessage(response?.message || 'サーバーエラーが発生しました', 'error');
        }
      });
    }

    // メッセージ表示
    function showMessage(text, type) {
      const $message = $('#message');
      $message.removeClass('success error').addClass(type);
      $message.text(text);
      $message.show();
      
      setTimeout(function() {
        $message.fadeOut();
      }, 5000);
    }

    // HTMLエスケープ
    function escapeHtml(text) {
      if (!text) return '';
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return String(text).replace(/[&<>"']/g, function(m) { return map[m]; });
    }

    // CSVアップロードモーダルを開く
    function openCSVUploadModal() {
      document.getElementById('csvUploadModal').style.display = 'block';
      document.getElementById('csvUploadForm').reset();
      document.getElementById('uploadProgress').style.display = 'none';
      document.getElementById('uploadResult').style.display = 'none';
    }

    // CSVアップロードモーダルを閉じる
    function closeCSVUploadModal() {
      document.getElementById('csvUploadModal').style.display = 'none';
    }

    // CSVアップロード処理
    $('#csvUploadForm').on('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const fileInput = document.getElementById('csvfile');
      
      if (!fileInput.files[0]) {
        alert('ファイルを選択してください');
        return;
      }

      // プログレス表示
      $('#uploadProgress').show();
      $('#uploadResult').hide();
      $('#progressBar').css('width', '0%').text('0%');

      // アップロード実行
      $.ajax({
        url: '/user/api/users/upload-csv',
        type: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        xhr: function() {
          const xhr = new window.XMLHttpRequest();
          xhr.upload.addEventListener('progress', function(e) {
            if (e.lengthComputable) {
              const percentComplete = Math.round((e.loaded / e.total) * 100);
              $('#progressBar').css('width', percentComplete + '%').text(percentComplete + '%');
            }
          }, false);
          return xhr;
        },
        success: function(response) {
          $('#progressBar').css('width', '100%').text('100%');
          
          let resultHtml = '<strong>アップロード完了</strong><br>';
          resultHtml += response.message + '<br><br>';
          
          if (response.details && response.details.errors.length > 0) {
            resultHtml += '<strong>エラー詳細:</strong><br>';
            resultHtml += '<div style="max-height: 150px; overflow-y: auto; font-size: 12px;">';
            response.details.errors.forEach(err => {
              resultHtml += err + '<br>';
            });
            resultHtml += '</div>';
          }
          
          $('#uploadResult')
            .html(resultHtml)
            .css('background', response.details.failed === 0 ? 'rgba(76, 175, 80, 0.2)' : 'rgba(255, 243, 205, 0.2)')
            .css('border', response.details.failed === 0 ? '1px solid #4caf50' : '1px solid #ffeaa7')
            .css('color', response.details.failed === 0 ? '#4caf50' : '#ff9800')
            .show();

          // ユーザー一覧を再読み込み
          loadUsers();

          // 3秒後にモーダルを閉じる（成功時のみ）
          if (response.details.failed === 0) {
            setTimeout(() => {
              closeCSVUploadModal();
            }, 3000);
          }
        },
        error: function(xhr, status, error) {
          $('#uploadResult')
            .html('<strong>エラー:</strong><br>' + (xhr.responseJSON?.message || error))
            .css('background', 'rgba(244, 67, 54, 0.2)')
            .css('border', '1px solid #f44336')
            .css('color', '#f44336')
            .show();
        }
      });
    });

    // モーダル外クリックで閉じる
    window.onclick = function(event) {
      if (event.target.id === 'userModal') {
        closeModal();
      }
      if (event.target.id === 'csvUploadModal') {
        closeCSVUploadModal();
      }
    }
  </script>

