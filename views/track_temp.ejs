    <!-- WebSocket & Chart Logic -->
    <script>
        // ===== „Ç∞„É≠„Éº„Éê„É´Â§âÊï∞ =====
        var webSocket = null;
        var reconnectTimer = null;
        var wsUri = "<%= (typeof wsUri !== 'undefined' ? wsUri : 'ws://www.racelive.jp:8061/temp') %>";
        
        // Chart.js „Ç§„É≥„Çπ„Çø„É≥„Çπ
        var charts = {
            finish: null,
            pitIn: null,
            pitOut: null,
            sec1: null,
            sec2: null
        };
        
        // „Éá„Éº„Çø„Éê„ÉÉ„Éï„Ç°ÔºàÊúÄÂ§ß100„Éù„Ç§„É≥„ÉàÔºâ
        var tempData = {
            finish: [],
            pitIn: [],
            pitOut: [],
            sec1: [],
            sec2: []
        };
        
        var maxDataPoints = 100;
        
        // ===== Chart.js Ë®≠ÂÆö =====
        var chartConfig = {
            type: 'line',
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: {
                    duration: 300
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleColor: '#5c9cd8',
                        bodyColor: '#fff',
                        borderColor: '#5c9cd8',
                        borderWidth: 1
                    }
                },
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            displayFormats: {
                                minute: 'HH:mm',
                                hour: 'HH:mm'
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#999'
                        }
                    },
                    y: {
                        beginAtZero: false,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#999',
                            callback: function(value) {
                                return value + '¬∞C';
                            }
                        }
                    }
                },
                interaction: {
                    mode: 'nearest',
                    axis: 'x',
                    intersect: false
                }
            }
        };
        
        // ===== ChartÂàùÊúüÂåñ =====
        function initCharts() {
            console.log('[Charts] Initializing charts...');
            
            // Finish/Sec3 Chart
            charts.finish = new Chart(document.getElementById('finishChart'), {
                ...chartConfig,
                data: {
                    datasets: [{
                        label: 'Finish / Sector 3',
                        data: [],
                        borderColor: '#ff6b6b',
                        backgroundColor: 'rgba(255, 107, 107, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                }
            });
            
            // Pit In Chart
            charts.pitIn = new Chart(document.getElementById('pitInChart'), {
                ...chartConfig,
                data: {
                    datasets: [{
                        label: 'Pit In',
                        data: [],
                        borderColor: '#ff9800',
                        backgroundColor: 'rgba(255, 152, 0, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                }
            });
            
            // Pit Out Chart
            charts.pitOut = new Chart(document.getElementById('pitOutChart'), {
                ...chartConfig,
                data: {
                    datasets: [{
                        label: 'Pit Out',
                        data: [],
                        borderColor: '#4caf50',
                        backgroundColor: 'rgba(76, 175, 80, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                }
            });
            
            // Sector 1 Chart
            charts.sec1 = new Chart(document.getElementById('sec1Chart'), {
                ...chartConfig,
                data: {
                    datasets: [{
                        label: 'Sector 1',
                        data: [],
                        borderColor: '#2196f3',
                        backgroundColor: 'rgba(33, 150, 243, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                }
            });
            
            // Sector 2 Chart
            charts.sec2 = new Chart(document.getElementById('sec2Chart'), {
                ...chartConfig,
                data: {
                    datasets: [{
                        label: 'Sector 2',
                        data: [],
                        borderColor: '#9c27b0',
                        backgroundColor: 'rgba(156, 39, 176, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                }
            });
            
            console.log('[Charts] All charts initialized');
        }
        
        // ===== WebSocketÊé•Á∂ö =====
        function initWebSocket() {
            try {
                console.log('[WS] Connecting to', wsUri);
                updateStatus('Connecting...', false);
                
                webSocket = new WebSocket(wsUri);
                webSocket.onopen = onOpen;
                webSocket.onmessage = onMessage;
                webSocket.onclose = onClose;
                webSocket.onerror = onError;
            } catch (e) {
                console.error('[WS] Init error:', e);
                updateStatus('Connection failed', false);
                scheduleReconnect();
            }
        }
        
        function onOpen(event) {
            console.log('[WS] Connected');
            updateStatus('Connected', true);
            
            // „É™„Éà„É©„Ç§„Çø„Ç§„Éû„ÉºÂÅúÊ≠¢
            if (reconnectTimer) {
                clearTimeout(reconnectTimer);
                reconnectTimer = null;
            }
            
            // Êú¨Êó•„ÅÆ„Éá„Éº„Çø„ÇíË¶ÅÊ±Ç
            requestTodayData();
        }
        
        function onMessage(event) {
            if (event && event.data) {
                try {
                    var data = JSON.parse(event.data);
                    console.log('[WS] Data received:', data);
                    processTemperatureData(data);
                } catch (e) {
                    console.error('[WS] Parse error:', e, event.data);
                }
            }
        }
        
        function onError(event) {
            console.error('[WS] Error:', event);
            updateStatus('Connection error', false);
        }
        
        function onClose(event) {
            console.warn('[WS] Closed. Code:', event.code, 'Reason:', event.reason);
            updateStatus('Disconnected', false);
            webSocket = null;
            scheduleReconnect();
        }
        
        function scheduleReconnect() {
            if (reconnectTimer) return;
            console.log('[WS] Reconnecting in 5 seconds...');
            reconnectTimer = setTimeout(function() {
                reconnectTimer = null;
                initWebSocket();
            }, 5000);
        }
        
        // ===== „Éá„Éº„ÇøÂá¶ÁêÜ =====
        function processTemperatureData(data) {
            // „Éá„Éº„ÇøÂΩ¢Âºè‰æãÔºö
            // {
            //     timestamp: "2025-12-10T12:34:56.789Z",
            //     finish: 32.5,
            //     pitIn: 30.2,
            //     pitOut: 31.8,
            //     sec1: 33.1,
            //     sec2: 32.9
            // }
            
            var timestamp = data.timestamp ? new Date(data.timestamp) : new Date();
            
            // ÂêÑ„Çª„ÇØ„Ç∑„Éß„É≥„ÅÆ„Éá„Éº„Çø„ÇíËøΩÂä†
            if (data.finish !== undefined) addDataPoint('finish', timestamp, data.finish);
            if (data.pitIn !== undefined) addDataPoint('pitIn', timestamp, data.pitIn);
            if (data.pitOut !== undefined) addDataPoint('pitOut', timestamp, data.pitOut);
            if (data.sec1 !== undefined) addDataPoint('sec1', timestamp, data.sec1);
            if (data.sec2 !== undefined) addDataPoint('sec2', timestamp, data.sec2);
            
            // „ÉÅ„É£„Éº„Éà„ÇíÊõ¥Êñ∞
            updateCharts();
            
            // Áµ±Ë®à„ÇíÊõ¥Êñ∞
            updateStatistics();
        }
        
        function addDataPoint(location, timestamp, temperature) {
            // „Éá„Éº„Çø„Éù„Ç§„É≥„Éà„ÇíËøΩÂä†
            tempData[location].push({
                x: timestamp,
                y: temperature
            });
            
            // ÊúÄÂ§ß„Éù„Ç§„É≥„ÉàÊï∞„ÇíË∂Ö„Åà„Åü„ÇâÂè§„ÅÑ„Éá„Éº„Çø„ÇíÂâäÈô§
            if (tempData[location].length > maxDataPoints) {
                tempData[location].shift();
            }
            
            // ÁèæÂú®„ÅÆÊ∏©Â∫¶„ÇíË°®Á§∫
            document.getElementById(location + 'Temp').textContent = temperature.toFixed(1) + '¬∞C';
        }
        
        function updateCharts() {
            // ÂêÑ„ÉÅ„É£„Éº„Éà„ÅÆ„Éá„Éº„Çø„ÇíÊõ¥Êñ∞
            charts.finish.data.datasets[0].data = tempData.finish;
            charts.pitIn.data.datasets[0].data = tempData.pitIn;
            charts.pitOut.data.datasets[0].data = tempData.pitOut;
            charts.sec1.data.datasets[0].data = tempData.sec1;
            charts.sec2.data.datasets[0].data = tempData.sec2;
            
            // „ÉÅ„É£„Éº„Éà„ÇíÂÜçÊèèÁîª
            charts.finish.update('none');
            charts.pitIn.update('none');
            charts.pitOut.update('none');
            charts.sec1.update('none');
            charts.sec2.update('none');
        }
        
        function updateStatistics() {
            // ÂÖ®„Å¶„ÅÆ„Éá„Éº„Çø„Éù„Ç§„É≥„Éà„ÇíÂèéÈõÜ
            var allTemps = [];
            Object.keys(tempData).forEach(function(key) {
                tempData[key].forEach(function(point) {
                    allTemps.push(point.y);
                });
            });
            
            if (allTemps.length === 0) return;
            
            // Áµ±Ë®àË®àÁÆó
            var sum = allTemps.reduce((a, b) => a + b, 0);
            var avg = sum / allTemps.length;
            var max = Math.max(...allTemps);
            var min = Math.min(...allTemps);
            
            // Ë°®Á§∫Êõ¥Êñ∞
            document.getElementById('avgTemp').innerHTML = avg.toFixed(1) + '<span class="unit">¬∞C</span>';
            document.getElementById('maxTemp').innerHTML = max.toFixed(1) + '<span class="unit">¬∞C</span>';
            document.getElementById('minTemp').innerHTML = min.toFixed(1) + '<span class="unit">¬∞C</span>';
            document.getElementById('dataCount').textContent = allTemps.length;
        }
        
        // ===== UIÊõ¥Êñ∞ =====
        function updateStatus(text, connected) {
            document.getElementById('statusText').textContent = text;
            var indicator = document.getElementById('wsStatus');
            if (connected) {
