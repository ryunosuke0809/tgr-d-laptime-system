        // ===== „Éá„Éº„Çø„É™„ÇØ„Ç®„Çπ„Éà =====
        function requestTodayData() {
            if (!webSocket || webSocket.readyState !== WebSocket.OPEN) {
                console.warn('[WS] Cannot request data: not connected');
                return;
            }
            
            // Êú¨Êó•„ÅÆ„Éá„Éº„Çø„ÇíË¶ÅÊ±Ç„Åô„Çã„É°„ÉÉ„Çª„Éº„Ç∏„ÇíÈÄÅ‰ø°
            var request = {
                action: 'getTodayData',
                date: new Date().toISOString().split('T')[0]
            };
            
            webSocket.send(JSON.stringify(request));
            console.log('[WS] Requested today data:', request);
        }
        
        function requestHistoryData(date) {
            if (!webSocket || webSocket.readyState !== WebSocket.OPEN) {
                console.warn('[WS] Cannot request history: not connected');
                alert('WebSocket is not connected. Please wait...');
                return;
            }
            
            // Â±•Ê≠¥„Éá„Éº„Çø„ÇíË¶ÅÊ±Ç„Åô„Çã„É°„ÉÉ„Çª„Éº„Ç∏„ÇíÈÄÅ‰ø°
            var request = {
                action: 'getHistoryData',
                date: date
            };
            
            webSocket.send(JSON.stringify(request));
            console.log('[WS] Requested history data for:', date);
            updateStatus('Loading history for ' + date + '...', true);
        }
        
